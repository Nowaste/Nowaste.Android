<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">


    <Button
        android:id="@+id/btn_food_quantity"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/circle"
        android:textAlignment="center"
        android:text="42"
        android:textColor="#FFFFFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:autoText="false"
        android:textStyle="bold"
        android:backgroundTint="#F44336"
        android:elevation="6dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/txt_food_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="110dp"
        android:padding="6dp"
        android:text="Jambon 4 tranches"
        android:gravity="center_vertical"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/common_full_open_on_phone"
        android:backgroundTint="#000000"
        android:id="@+id/btn_open_toggle"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="60dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:backgroundTint="#FFEB3B"
        android:id="@+id/btn_favorite_toggle"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/fab_margin"/>

</android.support.v7.widget.CardView>